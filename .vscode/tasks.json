{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "newMarkdown",
        "command": "touch `date +%Y-%m-%d-%H%M`-${input:fileName}.md; echo '---\ntitle:\ndescription:\ndate:xxx\ntags:\n\n---'; code . `date +%Y-%m-%d-%H%M`-${input:fileName}.md",
        // "command": "touch `date +%Y%m%d-%H%M`-${input:fileName}.txt",
        // to create and open this new file use the following instead

        "type": "shell",
        "problemMatcher": [],
        "presentation": {
          "echo": false,
          "reveal": "silent",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "promptOnClose": false
      }
    ],

    "inputs": [
      {
        "type": "promptString",
        "id": "fileName",
        "description": "name for new file.",
        "default": "newfile"
      }
    ]
  }